# open terminal
cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

# open Finder
cmd - f : open -a "Finder"

# open Mail.app (Apple Mail)
cmd - m : open -a "Mail"

# open Safari
cmd - b : open -a "Safari"

# open ChatGPT
cmd - g : open -a "ChatGPT"

# open Visual Studio Code
cmd - e : open -na "Visual Studio Code"

# shutdown
cmd + shift - q : osascript -e 'tell application "System Events" to shut down'

# reboot
cmd + shift - r : osascript -e 'tell application "System Events" to restart'