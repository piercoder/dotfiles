# Open Terminal (Kitty)
alt - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

# Open Finder
alt - f : open -a "Finder"

# Open Mail.app (Apple Mail)
alt - m : open -a "Mail"

# Open Safari
alt - b : open -a "Safari"

# Open ChatGPT
alt - g : open -a "ChatGPT"

# Open Visual Studio Code
alt - e : open -na "Visual Studio Code"

# Full screen
alt - w : /usr/bin/osascript -e 'tell application "System Events" to delay 0.2' -e 'tell application "System Events" to keystroke "f" using {command down, control down}'

# Shutdown
alt + shift - q : /usr/bin/osascript -e 'tell application "System Events" to shut down'

# Restart
alt + shift - r : /usr/bin/osascript -e 'tell application "System Events" to restart'
