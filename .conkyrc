conky.config = {
    alignment = 'middle_right',
    background = yes,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'Sans Regular: size=10',
    gap_x = 60,
    gap_y = 60,
    minimum_height = 5,
    minimum_width = 300,
    maximum_width = 300,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,

    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_transparent = false,
    own_window_argb_visual = true,
    own_window_argb_value = 120,
--    own_window_colour = 'ffffff',
    own_window_hints = 'undecorated','below','sticky','skip_taskbar', 'skip_pager',

    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
}

conky.text = [[
${color grey}OS:$color ${execi 999999 echo '. /etc/os-release ; echo $PRETTY_NAME' | sh}
${color grey}Kernel:$color $kernel
${color grey}Machine:$color $machine
${color grey}Users:$color $user_names
${color grey}Host name:$color $nodename
${color grey}Uptime:$color $uptime
${color 15539E}$hr
${color grey}CPU Usage:$color $cpu%
${color 15539E}${cpubar 6}
${color grey}RAM Usage:$color $mem/$memmax - $memperc%
${color 15539E}${membar 6}
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc%
${color 15539E}${swapbar 6}
${color grey}Disk (/):$color $fs_used/$fs_size - $fs_used_perc%
${color 15539E}${fs_bar 6}
${color grey}Battery:$color $battery_percent%
${color 15539E}${battery_bar 6}
${color 15539E}$hr
${color grey}Public IP:$color ${execi 999999 echo curl http://ipecho.net/plain | sh}
${color grey}Local IP:$color ${addr wlp3s0}
${color grey}Up:$color ${upspeed wlp3s0}
${color 15539E}${upspeedgraph wlp3s0}
${color grey}Down:$color ${downspeed wlp3s0}
${color 15539E}${downspeedgraph wlp3s0}
]]

